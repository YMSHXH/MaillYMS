<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/one_img"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/one_title"
        app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
        android:id="@+id/one_title"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="0dp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/one_img"
        app:layout_constraintBottom_toTopOf="@+id/one_price"
        android:text="20dp"/>
    <TextView
        android:id="@+id/one_price"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textColor="#FF3366"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/one_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/one_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="20dp"/>

</android.support.constraint.ConstraintLayout>